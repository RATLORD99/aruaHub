-- Load Rayfield
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create Window
local Window = Rayfield:CreateWindow({
   Name = "AuraHub",
   Icon = 0,
   LoadingTitle = "Loading...",
   LoadingSubtitle = "by Aura",
   ShowText = "Aura",
   Theme = "AmberGlow",
   ToggleUIKeybind = "K",
   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false,
   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "configuration.txt"
   },
   Discord = {
      Enabled = false,
      Invite = "noinvitelink",
      RememberJoins = true
   },
   KeySystem = true,
   KeySettings = {
      Title = "Aura hub",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"King"}
   }
})

-- Notification
Rayfield:Notify({
   Title = "Aura Hub",
   Content = "Welcome to Aura",
   Duration = 6.5,
   Image = 4483362458,
})

-- Info Tab
local InfoTab = Window:InfoTab("Info", "rewind")
InfoTab:CreateParagraph({
   Title = "Updates",
   Content = "Hello! This is a new script hub. We will try to update the scripts weekly."
})

-- Event Tab
local EventTab = Window:CreateTab("Event", "rewind")

-- Create Section for Toggles
local Section = EventTab:CreateSection("Beanstalk")

-- Toggle to collect event rewards repeatedly
local running = false -- Controls the loop

local CollectToggle = Section:CreateToggle({
    Name = "Collect Event Rewards",
    CurrentValue = false,
    Flag = "Toggle1",
    Callback = function(Value)
        running = Value
        if running then
            print("Auto-collect started!")
            spawn(function()
                while running do
                    -- Orb 1
                    local args1 = {1}
                    game:GetService("ReplicatedStorage"):WaitForChild("BeanstalkClaimREWard"):FireServer(unpack(args1))
                    
                    -- Orb 2
                    local args2 = {2}
                    game:GetService("ReplicatedStorage"):WaitForChild("BeanstalkClaimREWard"):FireServer(unpack(args2))
                    
                    -- Orb 3
                    local args3 = {3}
                    game:GetService("ReplicatedStorage"):WaitForChild("BeanstalkClaimREWard"):FireServer(unpack(args3))
                    
                    -- Orb 4
                    local args4 = {4}
                    game:GetService("ReplicatedStorage"):WaitForChild("BeanstalkClaimREWard"):FireServer(unpack(args4))
                    
                    print("Event rewards collected!")
                    wait(5) -- Repeat every 5 seconds
                end
            end)
        else
            print("Auto-collect stopped!")
        end
    end
})

-- Divider
local Divider = EventTab:CreateDivider()
Divider:Set(false) -- Set visibility

-- Optional: Destroy UI
-- Rayfield:Destroy()
